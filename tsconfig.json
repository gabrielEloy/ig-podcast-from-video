{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": false,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "allowJs": false,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"],
        "@root/*": ["src/*"]
      },
      "typeRoots": ["src/types", "node_modules/@types"],
      "jsx": "react"
    },
    "include": ["src/**/*"]
  }
  